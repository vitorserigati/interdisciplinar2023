@using Interdisciplinar2023.ViewModels;
@model LoginViewModel
@{
Layout = "~/Views/Shared/_LoginLayout.cshtml";
ViewData["Title"] = "Login";
}



<div class="text-center d-flex justify-content-center align-items-center h-100 container" style="min-height: 100vh;">
    <form asp-action="Login">
        <h4> Controle de Estoque </h4>

        @if(TempData["Error"] != null)
        {
        <div class="alert alert-danger">
            <span><b>Erro!</b> - @TempData["Error"]</span>
        </div>
        }
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Email" class="col-form-label">@Html.DisplayNameFor(m => m.Email)</label>
            </div>
            <div class="col-auto">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Password" class="col-form-label">@Html.DisplayNameFor(m => m.Password)</label>
            </div>
            <div class="col-auto">
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-around my-3">
            <button type="submit" class="btn btn-success">Entrar</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cadastrar</a>
        </div>
    </form>
</div>
