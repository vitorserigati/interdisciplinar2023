@using Interdisciplinar2023.ViewModels;
@model RegistrationViewModel

@{ 
    Layout = "../Shared/_LoginLayout.cshtml"; 
    ViewData["Title"] = "Cadastro";
}

<div class="text-center d-flex justify-content-center align-items-center h-100 container" style="min-height: 100vh;">
    <form asp-action="Register">
        <h4> Cadastro </h4>

        @if(TempData["Error"] != null)
        {
        <div class="alert alert-danger">
            <span><b>Erro!</b> - @TempData["Error"]</span>
        </div>
        }
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Email" class="col-form-label">@Html.DisplayNameFor(m => m.Email)</label>
            </div>
            <div class="g-2 col-auto">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Password" class="col-form-label">@Html.DisplayNameFor(m => m.Password)</label>
            </div>
            <div class="g-2 col-auto">
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="ConfirmPassword" class="col-form-label">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
            </div>
            <div class="g-2 col-auto">
                <input asp-for="ConfirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Celphone" class="col-form-label">@Html.DisplayNameFor(m => m.Celphone)</label>
            </div>
            <div class="g-2 col-auto">
                <input asp-for="Celphone" class="form-control">
                <span asp-validation-for="Celphone" class="text-danger col-auto"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center justify-content-between my-2">
            <div class="col-auto">
                <label asp-for="Phone" class="col-form-label">@Html.DisplayNameFor(m => m.Phone)</label>
            </div>
            <div class="col-auto">
                <input asp-for="Phone" class="form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between my-4">
            <button type="submit" class="btn btn-success">Criar Conta</button>
            <a asp-action="Login" aps-controller="Account" class="btn btn-secondary">JÃ¡ possui uma conta?</a>
        </div>
    </form>
</div>
