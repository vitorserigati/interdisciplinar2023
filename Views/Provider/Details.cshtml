@using Interdisciplinar2023.Models;
@using Interdisciplinar2023.ViewModels;
@model ProviderDetailsViewModel
@{
ViewData["Title"] = "Fornecedor: " + Model.CorporateName;
}

<div class="d-flex flex-row container align-items-center justify-content-center">
    <div class="w-50">
        <h1> Fornecedor: @Model.CorporateName </h1>
        <ul class="list-group list-group-flush">
            <input type="hidden" asp-for="Id">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.CorporateName):</h4> @Model.CorporateName
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Street):</h4> @Model.Street
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Neighborhood):</h4> @Model.Neighborhood
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.City):</h4> @Model.City
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.State):</h4> @Model.State
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.PostalCode):</h4> @Model.PostalCode
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Email):</h4> @Model.Email
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Phone):</h4> @Model.Phone
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Celphone):</h4> @Model.Celphone
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <h4>@Html.DisplayNameFor(m => m.Products):</h4>
                @foreach(Product prod in Model.Products)
                {
                <div class="ms-2 me-auto fs-6 fw-normal">
                    <div class="fw-bold fs-6">@prod.Name</div>
                    <div>
                        Quantidade: <span class="badge bg-primary rounded-pill">@prod.Quantity</span>
                    </div>
                </div>
                }
            </li>
            <div class="d-flex flex-row justify-content-around align-items-center my-3">
                <a asp-action="Edit" asp-controller="Provider" asp-route-id="@Model.Id" class="btn btn-primary">
                    Editar
                </a>
                <a asp-action="Delete" asp-controller="Provider" asp-route-id="@Model.Id" class="btn btn-danger">
                    Deletar </a>
            </div>
        </ul>
    </div>
</div>
